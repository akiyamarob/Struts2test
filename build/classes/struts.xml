<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
           <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <package name="default" extends="struts-default">


        <!-- Hello worldのサンプルアクション -->
        <action name="hello" class="seePages.HelloWorldAction" method="execute">
            <result name="success">/view/seePages/HelloWorld.jsp</result>
			 <result name="err">/view/seePages/err.jsp</result>
			  <result name="rdr" >/view/seePages/err.jsp</result>
			 <result name="input">/view/seePages/err.jsp</result>



        </action>
        <action name="login" class = "seePages.Login" method="execute">
         <result name="success">/view/seePages/main.jsp</result>
         <result name="iderr">/view/seePages/loginiderr.jsp</result>
         <result name="passerr">/view/seePages/loginpasserr.jsp</result>
        </action>

        <action name="whatYouSee" class = "seePages.WhatYouSee" method="execute">
         <result name="seepage">/view/seePages/seepage.jsp</result>
         <result name="timeout">/view/seePages/timeout.jsp</result>
        </action>
    </package>
</struts>